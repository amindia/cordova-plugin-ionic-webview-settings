<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
	id="cordova-plugin-ionic-webview-settings"
	version="0.0.1">
	<name>Ionic Webview Settings</name>
	<description>This plugin control Ionic Webview Settings.</description>
	<license>Apache 2.0</license>
	<keywords>cordova,webview</keywords>
	<repo>https://github.com/amindia/cordova-plugin-ionic-webview-settings.git</repo>


    <!-- android -->
    <platform name="android">
    <config-file target="res/xml/config.xml" parent="/*">
        <feature name="IonicWebViewSettings">
        <param name="android-package" value="in.adaptivemedia.cordova.IonicWebViewSettings"/>
        <param name="onload" value="true" />

        </feature>
    </config-file>
    

    <source-file src="src/android/in/adaptivemedia/cordova/IonicWebViewSettings.java" target-dir="src/in/adaptivemedia/cordova"/>
    </platform>
</plugin>
